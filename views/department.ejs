<%- include('partials/head', {title: 'Departments | Daisy Portal' }) %>
    <%- include('partials/header', {activePage: 'departments' }) %>

        <main class="container">
            <!-- Page Header -->
            <section class="page-header text-center">
                <h1>Sponsorship Departments</h1>
                <p class="lead">Choose a department to explore sponsored students and their achievements</p>
            </section>

            <!-- Department Buttons -->
            <section class="departments-section">
                <div class="department-buttons">
                    <a href="/departments/germans" class="btn-department">
                        <i class="fas fa-globe-europe"></i>
                        <span>Germans Department</span>
                        <small>German sponsorship program students</small>
                    </a>
                    <a href="/departments/italians" class="btn-department">
                        <i class="fas fa-pizza-slice"></i>
                        <span>Italians Department</span>
                        <small>Italian sponsorship program students</small>
                    </a>
                    <a href="/departments/education" class="btn-department">
                        <i class="fas fa-seedling"></i>
                        <span>Education for Generation</span>
                        <small>Long-term educational support program</small>
                    </a>
                    <a href="/departments/warmhearted" class="btn-department">
                        <i class="fas fa-heart"></i>
                        <span>Warmhearted Group</span>
                        <small>Compassionate sponsorship initiative</small>
                    </a>
                    <a href="/departments/assisted" class="btn-department">
                        <i class="fas fa-hands-helping"></i>
                        <span>Assisted Group</span>
                        <small>Additional support and mentorship program</small>
                    </a>
                </div>
            </section>

            <!-- Department Statistics -->
            <section class="stats-section">
                <div class="enhanced-card">
                    <div class="card-header">
                        <h3><i class="fas fa-chart-pie"></i> Department Overview</h3>
                    </div>
                    <div class="card-body">
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="stat-info">
                                    <h4>200+</h4>
                                    <p>Total Students</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <div class="stat-info">
                                    <h4>5</h4>
                                    <p>Active Departments</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <div class="stat-info">
                                    <h4>85%</h4>
                                    <p>Success Rate</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-hand-holding-heart"></i>
                                </div>
                                <div class="stat-info">
                                    <h4>50+</h4>
                                    <p>Active Sponsors</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Back Button -->
            <section class="text-center mt-5">
                <a href="/" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            </section>
        </main>

        <style>
            .page-header {
                padding: 3rem 0;
            }

            .page-header h1 {
                color: var(--maroon);
                margin-bottom: 1rem;
                font-size: 2.5rem;
            }

            .stats-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 2rem;
            }

            .stat-item {
                display: flex;
                align-items: center;
                gap: 1rem;
                padding: 1.5rem;
                background: var(--light-gray);
                border-radius: 10px;
                transition: all 0.3s ease;
            }

            .stat-item:hover {
                background: var(--maroon);
                color: var(--white);
                transform: translateY(-2px);
            }

            .stat-item:hover .stat-icon {
                background: var(--white);
                color: var(--maroon);
            }

            .stat-icon {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                background: var(--maroon);
                color: var(--white);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.5rem;
                transition: all 0.3s ease;
            }

            .stat-info h4 {
                margin: 0;
                font-size: 1.8rem;
                font-weight: bold;
            }

            .stat-info p {
                margin: 0;
                color: inherit;
            }
        </style>

        <%- include('partials/footer') %>