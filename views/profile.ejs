                        </div>
                    </div>

                    <div class="profile-meta">
                        <div class="meta-item">
                            <i class="fas fa-graduation-cap"></i>
                            <span>
                                <%= student.Class || 'Not specified' %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-school"></i>
                            <span>
                                <%= student.school || 'Not specified' %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-briefcase"></i>
                            <span>
