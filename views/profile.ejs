        <!-- Success/Error Toast Notification -->
        <div id="toast" class="toast"></div>

        <script>
            // Set minimum date to today for next term date
            document.getElementById('nextTermDate').min = new Date().toISOString().split('T')[0];

            // Interactive needs functionality
            document.addEventListener('DOMContentLoaded', function() {
                // Get all checkboxes
                const checkboxes = document.querySelectorAll('input[name="nextTermNeeds[]"]');
                
                // Add event listeners to each checkbox
                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', function() {
                        const infoId = this.id.replace('need', '').toLowerCase() + 'Info';
                        const infoElement = document.getElementById(infoId);
                        
                        if (this.checked) {
                            infoElement.classList.add('show');
                        } else {
                            infoElement.classList.remove('show');
                        }
                    });
                });
            });

            // Toast notification system
            function showToast(message, type = 'success') {
                const toast = document.getElementById('toast');
                toast.textContent = message;
                toast.className = `toast toast-${type} show`;

                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }

            // Biography functionality
            function toggleBioEdit() {
                const bioView = document.getElementById('bio-view');
                const bioEdit = document.getElementById('bio-edit');
                const bioText = document.getElementById('bio-text');

                if (bioEdit.style.display === 'none') {
                    bioView.style.display = 'none';
                    bioEdit.style.display = 'block';
                    bioText.focus();
                    updateCharCount();
                } else {
                    bioView.style.display = 'block';
                    bioEdit.style.display = 'none';
                }
            }

            function updateCharCount() {
                const bioText = document.getElementById('bio-text');
                const charCount = document.getElementById('char-count');
                charCount.textContent = bioText.value.length;
            }

            async function saveBio(admNo) {
                const bioText = document.getElementById('bio-text').value;

                try {
                    const response = await fetch(`/students/${admNo}/update-bio`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ biography: bioText })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Biography updated successfully!', 'success');
                        document.querySelector('.biography').textContent = bioText;
                        toggleBioEdit();
                    } else {
                        showToast('Failed to update biography', 'error');
                    }
                } catch (error) {
                    console.error('Error saving biography:', error);
                    showToast('Error updating biography', 'error');
                }
            }

            // Enhanced term form submission handling
            document.getElementById('term-form').addEventListener('submit', async function (e) {
                e.preventDefault();
                const submitBtn = document.getElementById('term-submit-btn');
                const originalText = submitBtn.innerHTML;

                // Collect all form data including checkboxes
                const formData = {
                    termName: document.getElementById('termName').value,
                    academicProgress: document.getElementById('academicProgress').value,
                    personalDevelopment: document.getElementById('personalDevelopment').value,
                    homeEnvironment: document.getElementById('homeEnvironment').value,
                    nextTermDate: document.getElementById('nextTermDate').value,
                    nextTermNeeds: Array.from(document.querySelectorAll('input[name="nextTermNeeds[]"]:checked')).map(cb => cb.value),
                    nextTermNeedsDetails: document.getElementById('nextTermNeedsDetails').value,
                    supportNeeds: document.getElementById('supportNeeds').value,
                    goalsNextTerm: document.getElementById('goalsNextTerm').value
                };

                // Collect additional info from expanded sections
                if (document.getElementById('needSchoolFees').checked) {
                    formData.schoolFeesDetails = {
                        amount: document.getElementById('feesAmount').value,
                        deadline: document.getElementById('feesDeadline').value,
                        notes: document.getElementById('feesNotes').value
                    };
                }
                
                if (document.getElementById('needUniform').checked) {
                    formData.uniformDetails = {
                        items: Array.from(document.getElementById('uniformItems').selectedOptions).map(opt => opt.value),
                        size: document.getElementById('uniformSize').value,
                        notes: document.getElementById('uniformNotes').value
                    };
                }
                
                if (document.getElementById('needBooks').checked) {
                    formData.booksDetails = {
                        bookList: document.getElementById('bookList').value,
                        bookstore: document.getElementById('bookstore').value,
                        notes: document.getElementById('booksNotes').value
                    };
                }
                
                if (document.getElementById('needTransport').checked) {
                    formData.transportDetails = {
                        type: document.getElementById('transportType').value,
                        cost: document.getElementById('transportCost').value,
                        notes: document.getElementById('transportNotes').value
                    };
                }

                // Show loading state
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting Update...';
                submitBtn.disabled = true;

                try {
                    const response = await fetch(`/students/<%= student['Admission Number'] %>/update-terms`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Term update submitted successfully!', 'success');
                        this.reset();
                        
                        // Hide all additional info sections
                        document.querySelectorAll('.additional-info').forEach(section => {
                            section.classList.remove('show');
                        });
                        
                        // Reload page to show updated terms
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast(result.message || 'Failed to submit term update', 'error');
                    }
                } catch (error) {
                    console.error('Error submitting term update:', error);
                    showToast('Error submitting term update', 'error');
                } finally {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            });

            // Report generation
            document.getElementById('generate-report-btn')?.addEventListener('click', async function () {
                const originalText = this.innerHTML;

                // Show loading state
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating Report...';
                this.disabled = true;

                try {
                    const response = await fetch(`/students/<%= student['Admission Number'] %>/generate-report`);
                    const result = await response.json();

                    if (result.success) {
                        showToast('Report generated successfully!', 'success');
                        // Open download link in new tab
                        window.open(result.downloadUrl, '_blank');
                        // Reload to show new report
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showToast(result.message || 'Failed to generate report', 'error');
                    }
                } catch (error) {
                    console.error('Error generating report:', error);
                    showToast('Error generating report', 'error');
                } finally {
                    this.innerHTML = originalText;
                    this.disabled = false;
                }
            });

            // Initialize character count
            document.addEventListener('DOMContentLoaded', function () {
                const bioText = document.getElementById('bio-text');
                if (bioText) {
                    bioText.addEventListener('input', updateCharCount);
                    updateCharCount();
                }
            });

            function openBioModal() {
                // Implement modal functionality if needed
