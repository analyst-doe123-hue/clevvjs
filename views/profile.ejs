<!-- Academic Terms Card -->
<div class="enhanced-card">
    <div class="card-header">
        <h3><i class="fas fa-calendar-alt"></i> Academic Term Update</h3>
    </div>
    <div class="card-body">
        <form id="term-form">
            
            <div class="form-section-header">
                <h5><i class="fas fa-file-alt"></i> Report Details</h5>
            </div>
            <div class="row">
                <div class="col-md-6 form-group mb-4">
                    <label for="termName" class="form-label fw-bold">Report Period *</label>
                    <input type="text" class="form-control" id="termName" name="termName" required
                        placeholder="e.g., Term 3 2024, Semester 1 2025">
                </div>
                <div class="col-md-6 form-group mb-4">
                    <label for="executiveSummary" class="form-label fw-bold">Executive Summary * (2-3 sentences)</label>
                    <textarea class="form-control" id="executiveSummary" name="executiveSummary" rows="2" required
                        placeholder="Coordinator's 2-3 sentence overview of the learner's term, progress, and key needs."></textarea>
                </div>
            </div>

            <div class="form-section-header">
                <h5><i class="fas fa-graduation-cap"></i> Academic Performance</h5>
            </div>
            <div class="form-group mb-4">
                <label for="academicOverview" class="form-label fw-bold">Academic Narrative (Overview) *</label>
                <textarea class="form-control" id="academicOverview" name="academicOverview" rows="3" required
                    placeholder="Describe overall performance, attitude towards studies, teacher feedback, and exam results..."></textarea>
            </div>
            <div class="row">
                <div class="col-md-6 form-group mb-4">
                    <label for="academicGrade" class="form-label fw-bold">Overall Grade/Average</label>
