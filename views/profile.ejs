<%- include('partials/head', {title: student['Full Name'] + ' - Profile | Daisy Portal' }) %>
    <%- include('partials/header', {activePage: 'profile' }) %>

        <main class="container">
            <!-- Profile Header -->
            <section class="profile-header">
                <div class="profile-photo-square">
                    <% if (student.Photo && student.Photo !=='static/images/' ) { %>
                        <img src="<%= student.Photo.startsWith('static/') ? '/' + student.Photo : student.Photo %>"
                            alt="<%= student['Full Name'] %>" class="square-photo"
                            onerror="this.src='/images/placeholder.jpg'">
                        <% } else { %>
                            <img src="/images/placeholder.jpg" alt="<%= student['Full Name'] %>" class="square-photo">
                            <% } %>
                </div>
                <div class="profile-info">
                    <h1>
                        <%= student['Full Name'] %>
                    </h1>
                    <p class="admission-number">
                        <%= student['Admission Number'] %>
                    </p>
                    <p class="department">
                        <%= student.Department || 'General Department' %>
                    </p>

                    <!-- Action Buttons -->
                    <div class="profile-actions mt-4">
                        <div class="action-buttons">
                            <a href="/students/<%= student['Admission Number'] %>" class="btn btn-primary">
                                <i class="fas fa-user"></i> Profile
                            </a>
                            <a href="/gallery/<%= student['Admission Number'] %>" class="btn btn-outline-primary">
                                <i class="fas fa-images"></i> Gallery
                            </a>
                            <a href="/results/<%= student['Admission Number'] %>" class="btn btn-outline-primary">
                                <i class="fas fa-chart-line"></i> Results
                            </a>
                            <a href="/letters/<%= student['Admission Number'] %>" class="btn btn-outline-primary">
                                <i class="fas fa-envelope"></i> Letter
                            </a>
                            <a href="/departments" class="btn btn-outline btn-sm">
                                <i class="fas fa-arrow-left me-2"></i>Back to Departments
                            </a>
                        </div>
                    </div>

                    <div class="profile-meta">
                        <div class="meta-item">
                            <i class="fas fa-graduation-cap"></i>
                            <span>
                                <%= student.Class || 'Not specified' %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-school"></i>
                            <span>
                                <%= student.school || 'Not specified' %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-briefcase"></i>
                            <span>
                                <%= student.career || 'Not specified' %>
                            </span>
                        </div>
                    </div>
                </div>
            </section>

                <!-- Biography Card -->
                <div class="enhanced-card">
                    <div class="card-header">
                        <h3><i class="fas fa-book-open"></i> Biography</h3>
                        <div class="action-buttons">
                            <button class="btn btn-outline-primary btn-sm" onclick="generateBiographyPDF()">
                                <i class="fas fa-print"></i> Print Biography
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="bio-editor">
                            <div id="bio-view">
                                <p class="biography">
                                    <%= student['Small Biography'] || 'No biography available for this student.' %>
                                </p>
                                <div class="action-buttons">
                                    <button class="btn btn-outline" onclick="openBioModal()">
                                        <i class="fas fa-expand"></i> View Full Biography
                                    </button>
                                    <button class="btn btn-outline" onclick="toggleBioEdit()">
                                        <i class="fas fa-edit"></i> Edit Biography
                                    </button>
                                </div>
                            </div>
                            <div id="bio-edit" style="display: none;">
                                <textarea class="bio-textarea" id="bio-text" maxlength="1000"
                                    placeholder="Tell us about the student..."><%= student['Small Biography'] || '' %></textarea>
                                <div class="char-count">
                                    <span id="char-count">0</span>/1000 characters
                                </div>
                                <div class="action-buttons mt-3">
                                    <button class="btn btn-primary"
                                        onclick="saveBio('<%= student['Admission Number'] %>')">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                    <button class="btn btn-outline" onclick="toggleBioEdit()">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Academic Terms Card -->
                <div class="enhanced-card">
                    <div class="card-header">
                        <h3><i class="fas fa-calendar-alt"></i> Academic Term Update</h3>
                    </div>
                    <div class="card-body">
                        <form id="term-form">

                            <div class="form-section-header">
                                <h5><i class="fas fa-file-alt"></i> Report Details</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="termName" class="form-label fw-bold">Report Period *</label>
                                    <input type="text" class="form-control" id="termName" name="termName" required
                                        placeholder="e.g., Term 3 2024, Semester 1 2025">
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="executiveSummary" class="form-label fw-bold">Executive Summary * (2-3
                                        sentences)</label>
                                    <textarea class="form-control" id="executiveSummary" name="executiveSummary"
                                        rows="2" required
                                        placeholder="Coordinator's 2-3 sentence overview of the learner's term, progress, and key needs."></textarea>
                                </div>
                            </div>

                            <div class="form-section-header">
                                <h5><i class="fas fa-graduation-cap"></i> Academic Performance</h5>
                            </div>
                            <div class="form-group mb-4">
                                <label for="academicOverview" class="form-label fw-bold">Academic Narrative (Overview)
                                    *</label>
                                <textarea class="form-control" id="academicOverview" name="academicOverview" rows="3"
                                    required
                                    placeholder="Describe overall performance, attitude towards studies, teacher feedback, and exam results..."></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="academicGrade" class="form-label fw-bold">Overall Grade/Average</label>
                                    <input type="text" class="form-control" id="academicGrade" name="academicGrade"
                                        placeholder="e.g., B+ (78%)">
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="academicRank" class="form-label fw-bold">Class Rank (if
                                        applicable)</label>
                                    <input type="text" class="form-control" id="academicRank" name="academicRank"
                                        placeholder="e.g., 11th out of 45">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="academicStrengths" class="form-label fw-bold">Key Strengths</label>
                                    <textarea class="form-control" id="academicStrengths" name="academicStrengths"
                                        rows="2"
                                        placeholder="e.g., Excels in Sciences, strong writer, very participatory..."></textarea>
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="academicChallenges" class="form-label fw-bold">Key Challenges</label>
                                    <textarea class="form-control" id="academicChallenges" name="academicChallenges"
                                        rows="2"
                                        placeholder="e.g., Struggling with Algebra, difficulty in public speaking..."></textarea>
                                </div>
                            </div>

                            <div class="form-section-header">
                                <h5><i class="fas fa-user-friends"></i> Personal & Home Environment</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="personalSchool" class="form-label fw-bold">Personal & Social (At
                                        School)</label>
                                    <textarea class="form-control" id="personalSchool" name="personalSchool" rows="2"
                                        placeholder="Behavior, discipline, peer relationships, confidence, motivation..."></textarea>
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="personalExtra" class="form-label fw-bold">Extracurricular
                                        Involvement</label>
                                    <textarea class="form-control" id="personalExtra" name="personalExtra" rows="2"
                                        placeholder="Clubs, sports, leadership roles, special achievements..."></textarea>
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label for="homeEnvironment" class="form-label fw-bold">Home Environment Update</label>
                                <textarea class="form-control" id="homeEnvironment" name="homeEnvironment" rows="2"
                                    placeholder="Guardian's feedback, home stability, health, any challenges..."></textarea>
                                <input type="text" class="form-control mt-2" id="homeUpdateMethod"
                                    name="homeUpdateMethod"
                                    placeholder="Update Method, e.g., Phone call with guardian (Oct 10), Home visit (Oct 12)...">
                            </div>

                            <div class="form-section-header">
                                <h5><i class="fas fa-forward"></i> Next Term Planning</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="nextTermDate" class="form-label fw-bold">Expected Return to School
                                        *</label>
                                    <input type="date" class="form-control" id="nextTermDate" name="nextTermDate"
                                        required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="goalsAcademic" class="form-label fw-bold">Academic Goals for Next
                                        Term</label>
                                    <textarea class="form-control" id="goalsAcademic" name="goalsAcademic" rows="2"
                                        placeholder="e.g., 1. Improve Math grade to B. 2. Be in the Top 10."></textarea>
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="goalsPersonal" class="form-label fw-bold">Personal Goals for Next
                                        Term</label>
                                    <textarea class="form-control" id="goalsPersonal" name="goalsPersonal" rows="2"
                                        placeholder="e.g., 1. Join the debate club. 2. Run for class prefect."></textarea>
                                </div>
                            </div>

                            <div class="form-section-header">
                                <h5><i class="fas fa-list-check"></i> Next Term Requirements & Needs</h5>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text">KES</span>
                                <input type="number" class="form-control" id="feesAmount" name="feesAmount"
                                    placeholder="Next Term School Fees Amount">
                                <span class="input-group-text">Due Date:</span>
                                <input type="date" class="form-control" id="feesDueDate" name="feesDueDate">
                            </div>

                            <div class="form-group mb-3">
                                <label for="uniformNotes" class="form-label">School Uniform Needs</label>
                                <textarea class="form-control" id="uniformNotes" name="uniformNotes" rows="2"
                                    placeholder="List required items, e.g., 2 shirts (Size M), 1 pair shoes (Size 8)."></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <label for="bookList" class="form-label">Textbooks & Supplies Needs</label>
                                <textarea class="form-control" id="bookList" name="bookList" rows="2"
                                    placeholder="List required books/materials, e.g., 'Form 3 Physics Guide', Scientific Calculator."></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <label for="transportNotes" class="form-label">Transport Needs</label>
                                <textarea class="form-control" id="transportNotes" name="transportNotes" rows="2"
                                    placeholder="e.g., Requires monthly bus pass (KES 1500), or N/A (boarding)."></textarea>
                            </div>

                            <div class="form-group mb-4">
                                <label for="otherNeeds" class="form-label">Other Needs / General Needs Summary</label>
                                <textarea class="form-control" id="otherNeeds" name="otherNeeds" rows="2"
                                    placeholder="e.g., Pocket money, personal items, or summary of all needs."></textarea>
                            </div>

                            <div class="form-section-header">
                                <h5><i class="fas fa-comment-dots"></i> Recommendations & Conclusion</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-4">
                                    <label for="recommendAcademic" class="form-label fw-bold">Academic
                                        Recommendations</label>
                                    <textarea class="form-control" id="recommendAcademic" name="recommendAcademic"
                                        rows="2" placeholder="e.g., Recommend 2hrs/week Math tutoring."></textarea>
                                </div>
                                <div class="col-md-6 form-group mb-4">
                                    <label for="recommendMaterial" class="form-label fw-bold">Material/Personal
                                        Recommendations</label>
                                    <textarea class="form-control" id="recommendMaterial" name="recommendMaterial"
                                        rows="2"
                                        placeholder="e.g., Immediate purchase of new shoes is essential."></textarea>
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label for="concludingRemark" class="form-label fw-bold">Concluding Remark *</label>
                                <textarea class="form-control" id="concludingRemark" name="concludingRemark" rows="2"
                                    required
                                    placeholder="Final positive, forward-looking statement from the coordinator."></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary" id="term-submit-btn">
                                <i class="fas fa-plus-circle"></i> Submit Term Update
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Display Recent Terms -->
                <% if (terms && terms.length> 0) { %>
                    <div class="terms-list mt-4">
                        <h5><i class="fas fa-history"></i> Recent Term Updates</h5>
                        <% terms.slice(0, 3).forEach(term=> { %>
                            <div class="term-item <%= term === terms[0] ? 'latest-term' : '' %>">
                                <div class="term-header">
                                    <div class="term-name">
                                        <strong>
                                            <%= term.TermName || term['Term Name'] || 'Unnamed Term' %>
                                        </strong>
                                        <% if (term===terms[0]) { %>
                                            <span class="badge badge-primary">LATEST</span>
                                            <% } %>
                                    </div>
                                    <div class="term-date">
                                        <%= term.Timestamp ? new Date(term.Timestamp).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                            minute: '2-digit' }) : 'Recent' %>
                                    </div>
                                </div>
                                <% if (term.ExecutiveSummary) { %>
                                    <div class="term-details">
                                        <strong>Executive Summary:</strong>
                                        <%= term.ExecutiveSummary.substring(0, 100) %>...
                                    </div>
                                    <% } %>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <div class="no-terms mt-4 text-center">
                            <i class="fas fa-calendar-plus text-muted mb-3" style="font-size: 2rem;"></i>
                            <p class="text-muted">No academic terms recorded yet.</p>
                            <p class="text-sm text-muted">Submit a term update to enable report generation</p>
                        </div>
                        <% } %>
            </div>

            <!-- Report Generator Card -->
            <div class="enhanced-card">
                <div class="card-header">
                    <h3><i class="fas fa-file-pdf"></i> Report Generator</h3>
                    <% if (terms && terms.length> 0) { %>
                        <span class="badge badge-info">Using: <%= terms[0].TermName || terms[0]['Term Name'] %></span>
                        <% } %>
                </div>
                <div class="card-body">
                    <div class="report-section">
                        <div class="report-icon">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <h4>Generate Comprehensive Report</h4>
                        <p class="text-muted">
                            Professional PDF report based on latest term data and student information
                        </p>

                        <% if (terms && terms.length> 0) { %>
                            <div class="report-actions">
                                <button class="btn btn-primary" id="generate-report-btn">
                                    <i class="fas fa-file-pdf"></i> Generate Report
                                </button>
                            </div>

                            <div class="report-info mt-3">
                                <small class="text-info">
                                    <i class="fas fa-info-circle"></i>
                                    Report will include: Academic progress, personal development, home environment, and
                                    next term planning
                                </small>
                            </div>
                            <% } else { %>
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    Add at least one academic term to enable report generation
                                </div>
                                <% } %>

                                    <!-- Generated Reports -->
                                    <% if (reports && reports.length> 0) { %>
                                        <div class="mt-4">
                                            <h5><i class="fas fa-file-download"></i> Generated Reports</h5>
                                            <% reports.slice(0, 5).forEach(report=> { %>
                                                <div class="term-item">
                                                    <div class="term-header">
                                                        <div class="term-name">
                                                            <strong>
                                                                <%= report.Filename || report.filename
                                                                    || 'Student Report' %>
                                                            </strong>
                                                        </div>
                                                        <div class="term-date">
                                                            <%= report.CreatedAt ? new
                                                                Date(report.CreatedAt).toLocaleDateString() :
                                                                report.created_at ? new
                                                                Date(report.created_at).toLocaleDateString()
                                                                : 'Recently' %>
                                                        </div>
                                                    </div>
                                                    <div class="action-buttons">
                                                        <a href="<%= report.url || `https://res.cloudinary.com/${process.env.CLOUDINARY_CLOUD_NAME}/raw/upload/${report.PublicId || report.public_id}` %>"
                                                            class="btn btn-success btn-sm" target="_blank" download>
                                                            <i class="fas fa-download"></i> Download PDF
                                                        </a>
                                                        <a href="<%= report.url || `https://res.cloudinary.com/${process.env.CLOUDINARY_CLOUD_NAME}/raw/upload/${report.PublicId || report.public_id}` %>"
                                                            class="btn btn-outline-primary btn-sm" target="_blank">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>
            </div>
        </main>

    <!-- Biography Modal -->
    <div id="bioModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Full Biography - <%= student['Full Name'] %>
                </h3>
                <span class="close" onclick="closeBioModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="biography-content">
                    <p id="modalBioContent">
                        <%= student['Small Biography'] || 'No biography available for this student.' %>
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="generateBiographyPDF()">
                    <i class="fas fa-print"></i> Print Biography
                </button>
                <button class="btn btn-outline" onclick="closeBioModal()">Close</button>
            </div>
        </div>
    </div>

        <!-- Success/Error Toast Notification -->
        <div id="toast" class="toast"></div>

        <script>
            // Set minimum date to today for next term date
            document.getElementById('nextTermDate').min = new Date().toISOString().split('T')[0];

            // Toast notification system
            function showToast(message, type = 'success') {
                const toast = document.getElementById('toast');
                toast.textContent = message;
                toast.className = `toast toast-${type} show`;

                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }

            // Biography functionality
            function toggleBioEdit() {
                const bioView = document.getElementById('bio-view');
                const bioEdit = document.getElementById('bio-edit');
                const bioText = document.getElementById('bio-text');

                if (bioEdit.style.display === 'none') {
                    bioView.style.display = 'none';
                    bioEdit.style.display = 'block';
                    bioText.focus();
                    updateCharCount();
                } else {
                    bioView.style.display = 'block';
                    bioEdit.style.display = 'none';
                }
            }

            function updateCharCount() {
                const bioText = document.getElementById('bio-text');
                const charCount = document.getElementById('char-count');
                charCount.textContent = bioText.value.length;
            }

            async function saveBio(admNo) {
                const bioText = document.getElementById('bio-text').value;

                try {
                    const response = await fetch(`/students/${admNo}/update-bio`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ biography: bioText })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Biography updated successfully!', 'success');
                        document.querySelector('.biography').textContent = bioText;
                        toggleBioEdit();
                    } else {
                        showToast('Failed to update biography', 'error');
                    }
                } catch (error) {
                    console.error('Error saving biography:', error);
                    showToast('Error updating biography', 'error');
                }
            }

            /// Enhanced Modal functionality
                function openBioModal() {
                    const modal = document.getElementById('bioModal');
                    const modalBioContent = document.getElementById('modalBioContent');

                    // Get the current biography text
                    const currentBio = document.querySelector('.biography').textContent;

                    // Set the modal content
                    modalBioContent.textContent = currentBio || 'No biography available for this student.';

                    // Show the modal
                    modal.style.display = 'block';

                    // Add escape key listener
                    document.addEventListener('keydown', handleEscapeKey);
                }

                function closeBioModal() {
                    const modal = document.getElementById('bioModal');
                    modal.style.display = 'none';

                    // Remove escape key listener
                    document.removeEventListener('keydown', handleEscapeKey);
                }

                function handleEscapeKey(event) {
                    if (event.key === 'Escape') {
                        closeBioModal();
                    }
                }

                // Close modal when clicking outside
                window.onclick = function (event) {
                    const modal = document.getElementById('bioModal');
                    if (event.target === modal) {
                        closeBioModal();
                    }
                }

            // Biography PDF Generation
            async function generateBiographyPDF() {
                try {
                    const response = await fetch(`/students/<%= student['Admission Number'] %>/generate-biography-pdf`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            biography: `<%= student['Small Biography'] %>`
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Biography PDF generated successfully!', 'success');
                        window.open(result.downloadUrl, '_blank');
                    } else {
                        showToast(result.message || 'Failed to generate biography PDF', 'error');
                    }
                } catch (error) {
                    console.error('Error generating biography PDF:', error);
                    showToast('Error generating biography PDF', 'error');
                }
            }

            // Enhanced term form submission handling
            document.getElementById('term-form').addEventListener('submit', async function (e) {
                e.preventDefault();
                const submitBtn = document.getElementById('term-submit-btn');
                const originalText = submitBtn.innerHTML;

                // Collect all form data
                const formData = {
                    termName: document.getElementById('termName').value,
                    executiveSummary: document.getElementById('executiveSummary').value,
                    academicOverview: document.getElementById('academicOverview').value,
                    academicGrade: document.getElementById('academicGrade').value,
                    academicRank: document.getElementById('academicRank').value,
                    academicStrengths: document.getElementById('academicStrengths').value,
                    academicChallenges: document.getElementById('academicChallenges').value,
                    personalSchool: document.getElementById('personalSchool').value,
                    personalExtra: document.getElementById('personalExtra').value,
                    homeEnvironment: document.getElementById('homeEnvironment').value,
                    homeUpdateMethod: document.getElementById('homeUpdateMethod').value,
                    nextTermDate: document.getElementById('nextTermDate').value,
                    goalsAcademic: document.getElementById('goalsAcademic').value,
                    goalsPersonal: document.getElementById('goalsPersonal').value,
                    feesAmount: document.getElementById('feesAmount').value,
                    feesDueDate: document.getElementById('feesDueDate').value,
                    uniformNotes: document.getElementById('uniformNotes').value,
                    bookList: document.getElementById('bookList').value,
                    transportNotes: document.getElementById('transportNotes').value,
                    otherNeeds: document.getElementById('otherNeeds').value,
                    recommendAcademic: document.getElementById('recommendAcademic').value,
                    recommendMaterial: document.getElementById('recommendMaterial').value,
                    concludingRemark: document.getElementById('concludingRemark').value
                };

                // Show loading state
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting Update...';
                submitBtn.disabled = true;

                try {
                    const response = await fetch(`/students/<%= student['Admission Number'] %>/update-terms`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Term update submitted successfully!', 'success');
                        this.reset();

                        // Reload page to show updated terms
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast(result.message || 'Failed to submit term update', 'error');
                    }
                } catch (error) {
                    console.error('Error submitting term update:', error);
