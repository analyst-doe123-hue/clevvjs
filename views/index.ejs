        <script>
            // Text Carousel Functionality
            document.addEventListener('DOMContentLoaded', function () {
                // Text Carousel
                const carouselSlides = document.querySelectorAll('.carousel-slide');
                const indicators = document.querySelectorAll('.carousel-indicators .indicator');
                let currentSlide = 0;

                function showSlide(index) {
                    // Hide all slides
                    carouselSlides.forEach(slide => {
                        slide.classList.remove('active');
                    });
                    indicators.forEach(indicator => {
                        indicator.classList.remove('active');
                    });

                    // Show current slide
                    carouselSlides[index].classList.add('active');
                    indicators[index].classList.add('active');

                    currentSlide = index;
                }

                function nextSlide() {
                    let nextIndex = (currentSlide + 1) % carouselSlides.length;
                    showSlide(nextIndex);
                }

                // Auto-advance carousel
                setInterval(nextSlide, 4000);

                // Add click events to indicators
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => {
                        showSlide(index);
                    });
                });

                // Admin Login Functionality
                const loginForm = document.getElementById('adminLoginForm');
                const loginSection = document.getElementById('adminLoginSection');
                const departmentsSection = document.getElementById('departmentsSection');
                const errorMessage = document.getElementById('loginErrorMessage');
                const logoutBtn = document.getElementById('logoutBtn');
                const accessLog = document.getElementById('accessLogEntries');
                const currentTimeElement = document.getElementById('currentTime');
                const adminDisplayName = document.getElementById('adminDisplayName');

                // Update current time
                function updateCurrentTime() {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString();
                    if (currentTimeElement) {
                        currentTimeElement.textContent = timeString;
                    }
                }

                setInterval(updateCurrentTime, 1000);
                updateCurrentTime();

                // System credentials
                const validUsername = 'admin.clevicks';
                const validPassword = 'India@2025';

                // Check if user is already logged in (from sessionStorage)
                if (sessionStorage.getItem('adminLoggedIn') === 'true') {
                    loginSection.style.display = 'none';
                    departmentsSection.style.display = 'block';
                    addLogEntry('Session restored - Welcome back');
                }

                // Handle login form submission
                loginForm.addEventListener('submit', function (e) {
                    e.preventDefault();

                    const username = document.getElementById('adminUsername').value;
                    const password = document.getElementById('adminPassword').value;

                    if (username === validUsername && password === validPassword) {
                        // Successful login
                        loginSection.style.display = 'none';
                        departmentsSection.style.display = 'block';
                        errorMessage.style.display = 'none';
                        adminDisplayName.textContent = username;

                        // Store login state
                        sessionStorage.setItem('adminLoggedIn', 'true');
                        sessionStorage.setItem('adminUsername', username);

                        // Add login entry to log
                        addLogEntry(`Authentication successful - Welcome ${username}`);
                    } else {
                        // Failed login
                        errorMessage.style.display = 'block';
                        document.getElementById('adminPassword').value = '';
                        addLogEntry('Failed authentication attempt');
                    }
                });

                // Handle logout
                logoutBtn.addEventListener('click', function () {
                    departmentsSection.style.display = 'none';
                    loginSection.style.display = 'block';
                    document.getElementById('adminUsername').value = '';
                    document.getElementById('adminPassword').value = '';

                    // Clear login state
                    sessionStorage.removeItem('adminLoggedIn');
                    sessionStorage.removeItem('adminUsername');

                    // Add logout entry to log
                    addLogEntry('Session terminated - User logged out');
                });

                // Function to add entries to the access log
                function addLogEntry(message) {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString();

                    const logEntry = document.createElement('div');
                    logEntry.className = 'log-entry-compact';
                    logEntry.innerHTML = `<span class="log-time">[${timeString}]</span> ${message}`;

                    accessLog.appendChild(logEntry);

                    // Scroll to the bottom of the log
                    accessLog.scrollTop = accessLog.scrollHeight;
                }

                // Auto-focus on username field
                document.getElementById('adminUsername').focus();
            });

            // Scroll to top functionality
            const scrollTopBtn = document.getElementById('scrollTopBtn');

            window.addEventListener('scroll', () => {
                if (window.pageYOffset > 300) {
                    scrollTopBtn.style.display = 'flex';
                } else {
                    scrollTopBtn.style.display = 'none';
                }
            });

            scrollTopBtn.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        </script>

